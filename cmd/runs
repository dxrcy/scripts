#!/bin/sh
export INFO='watch a file for changes, to compile and run'

~/scripts/cmd/require entr || exit 1

if [ "$1" = '--help' ] || [ "$1" = '-h' ]; then
    echo "runs: $INFO"
    echo 'USAGE:'
    echo '    runs [FILENAME]'
fi

file="$1"
if [ -z "$file" ]; then
    echo 'runs: missing file.'
    exit 1
fi
if [ ! -f "$file" ]; then
    echo "runs: cannot find file $file."
    exit 1
fi

shift
command=$*
if [ -z "$command" ]; then
    echo 'runs: missing command.'
    exit 1
fi

name="${file%.*}"
type="${file##*.}"

command="$(echo "$command" \
    | sed "s/%f/$file/g" \
    | sed "s/%n/$name/g" \
    | sed "s/%t/$type/g" \
)"

echo "$command"

echo "$file" | entr -c sh -c "$command"

