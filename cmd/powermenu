#!/bin/sh
export INFO='choose a power-off method with Rofi dialog'

~/scripts/cmd/require rofi systemctl betterlockscreen i3-msg || exit $?

monitor='eDP-1'

menu="\
 Cancel
 Shutdown
 Reboot
 Logout
 Lock
 Suspend"

i3-msg "focus output $monitor"

answer="$(echo "$menu" | rofi -dmenu -i -markup-rows -p 'Powermenu' -monitor "$monitor")"

case "$answer" in
    ' Shutdown') systemctl poweroff ;;
    ' Reboot')   systemctl reboot ;;
    ' Suspend')  systemctl suspend ;;
    ' Lock')     betterlockscreen -l ;;
    ' Logout')   i3-msg exit ;;
    *) ;;
esac

