#!/bin/sh
INFO='convert digits of a number into different codepoint set'

string=""
for arg in "$@"; do
    if [ -n "$mode" ]; then
        case "$arg" in
            -s|--subscript|\
            -S|--superscript|\
            -b|--bold|\
            -B|--boldserif|\
            -o|--outline|\
            -c|--circled|\
            -e|--segmented)
                echo 'fancy-digits: too many mode arguments given.'
                exit 1
                ;;
        esac
    fi

    case "$arg" in
        -h|--help)
            echo "fancy-digits: $INFO"
            echo '    USAGE:'
            echo '        fancy-digits [MODE] [OPTIONS] [..TEXT]'
            echo '    MODE:'
            echo '        -s  --substring    [â‚€â‚â‚‚â‚ƒâ‚„â‚…â‚†â‚‡â‚ˆâ‚‰] (default)'
            echo '        -S  --superscript  [â°Â¹Â²Â³â´âµâ¶â·â¸â¹]'
            echo '        -b  --bold         [ğŸ¬ğŸ­ğŸ®ğŸ¯ğŸ°ğŸ±ğŸ²ğŸ³ğŸ´ğŸµ]'
            echo '        -B  --boldserif    [ğŸğŸğŸğŸ‘ğŸ’ğŸ“ğŸ”ğŸ•ğŸ–ğŸ—]'
            echo '        -o  --outline      [â“ªâ‘ â‘¡â‘¢â‘£â‘¤â‘¥â‘¦â‘§â‘¨]'
            echo '        -c  --circled      [â“¿âŠâ‹âŒâââââ‘â’]'
            echo '        -e  --segmented    [ğŸ¯°ğŸ¯±ğŸ¯²ğŸ¯³ğŸ¯´ğŸ¯µğŸ¯¶ğŸ¯·ğŸ¯¸ğŸ¯¹]'
            echo '    OPTIONS:'
            echo '        -i  --ignore       only print characters in the set'
            exit 0
            ;;
        -s|--subscript)   mode='subscript'   ;;
        -S|--superscript) mode='superscript' ;;
        -b|--bold)        mode='bold'        ;;
        -B|--boldserif)   mode='boldserif'   ;;
        -o|--outline)     mode='outline'     ;;
        -c|--circled)     mode='circled'     ;;
        -e|--segmented)   mode='segmented'   ;;
        -i|--ignore) ignore_other=1 ;;
        -*)
            echo 'fancy-digits: unknown mode.'
            exit 1
            ;;
        *) [ "$string" ] && string="$string $arg" || string="$arg" ;;
    esac
done

if [ ! "$string" ]; then
    exit 0
fi

i=0
while [ "$i" -lt "${#string}" ]; do
    i=$((i + 1))
    digit=$(expr substr "$string" "$i" 1)
    case "$digit:$mode" in

        '0:subscript')   printf "\u2080" ;; 
        '1:subscript')   printf "\u2081" ;; 
        '2:subscript')   printf "\u2082" ;; 
        '3:subscript')   printf "\u2083" ;; 
        '4:subscript')   printf "\u2084" ;; 
        '5:subscript')   printf "\u2085" ;; 
        '6:subscript')   printf "\u2086" ;; 
        '7:subscript')   printf "\u2087" ;; 
        '8:subscript')   printf "\u2088" ;; 
        '9:subscript')   printf "\u2089" ;; 

        '0:superscript') printf "\u2070" ;; 
        '1:superscript') printf "\u00B9" ;; 
        '2:superscript') printf "\u00B2" ;; 
        '3:superscript') printf "\u00B3" ;; 
        '4:superscript') printf "\u2074" ;; 
        '5:superscript') printf "\u2075" ;; 
        '6:superscript') printf "\u2076" ;; 
        '7:superscript') printf "\u2077" ;; 
        '8:superscript') printf "\u2078" ;; 
        '9:superscript') printf "\u2079" ;; 

        '0:bold')        printf "\U1D7EC" ;; 
        '1:bold')        printf "\U1D7ED" ;; 
        '2:bold')        printf "\U1D7EE" ;; 
        '3:bold')        printf "\U1D7EF" ;; 
        '4:bold')        printf "\U1D7F0" ;; 
        '5:bold')        printf "\U1D7F1" ;; 
        '6:bold')        printf "\U1D7F2" ;; 
        '7:bold')        printf "\U1D7F3" ;; 
        '8:bold')        printf "\U1D7F4" ;; 
        '9:bold')        printf "\U1D7F5" ;; 

        '0:boldserif')   printf "\U1D7CE" ;; 
        '1:boldserif')   printf "\U1D7CF" ;; 
        '2:boldserif')   printf "\U1D7D0" ;; 
        '3:boldserif')   printf "\U1D7D1" ;; 
        '4:boldserif')   printf "\U1D7D2" ;; 
        '5:boldserif')   printf "\U1D7D3" ;; 
        '6:boldserif')   printf "\U1D7D4" ;; 
        '7:boldserif')   printf "\U1D7D5" ;; 
        '8:boldserif')   printf "\U1D7D6" ;; 
        '9:boldserif')   printf "\U1D7D7" ;; 

        '0:outline')     printf "\u24EA" ;; 
        '1:outline')     printf "\u2460" ;; 
        '2:outline')     printf "\u2461" ;; 
        '3:outline')     printf "\u2462" ;; 
        '4:outline')     printf "\u2463" ;; 
        '5:outline')     printf "\u2464" ;; 
        '6:outline')     printf "\u2465" ;; 
        '7:outline')     printf "\u2466" ;; 
        '8:outline')     printf "\u2467" ;; 
        '9:outline')     printf "\u2468" ;; 

        '0:circled')     printf "\u24FF" ;; 
        '1:circled')     printf "\u278A" ;; 
        '2:circled')     printf "\u278B" ;; 
        '3:circled')     printf "\u278C" ;; 
        '4:circled')     printf "\u278D" ;; 
        '5:circled')     printf "\u278E" ;; 
        '6:circled')     printf "\u278F" ;; 
        '7:circled')     printf "\u2790" ;; 
        '8:circled')     printf "\u2791" ;; 
        '9:circled')     printf "\u2792" ;; 

        '0:segmented')   printf "\U1FBF0" ;; 
        '1:segmented')   printf "\U1FBF1" ;; 
        '2:segmented')   printf "\U1FBF2" ;; 
        '3:segmented')   printf "\U1FBF3" ;; 
        '4:segmented')   printf "\U1FBF4" ;; 
        '5:segmented')   printf "\U1FBF5" ;; 
        '6:segmented')   printf "\U1FBF6" ;; 
        '7:segmented')   printf "\U1FBF7" ;; 
        '8:segmented')   printf "\U1FBF8" ;; 
        '9:segmented')   printf "\U1FBF9" ;; 

        *) [ -n "$ignore_other" ] || printf "$digit" ;;
    esac
done
echo

